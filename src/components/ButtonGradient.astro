---
import ArrowRightIcon from "../assets/images/iconsGUI/ArrowRight.astro";

interface Props {
  name: string;
  link?: string;
}
const { name, link } = Astro.props;
---

<button
  class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-sm text-gray-100 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800"
>
  <span
    class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-gray-950 dark:bg-gray-900 rounded-md group-hover:bg-opacity-0"
  >
    <a href={link} class="flex flex-row">
      {name}
      <ArrowRightIcon class="ml-4 size-6" />
    </a>
  </span>
</button>
