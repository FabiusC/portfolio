---
import ButtonGradient from "./ButtonGradient.astro";
import { PROJECTS } from "./consts/Constants.astro";
---

{
  PROJECTS.map(({ title, description, tags, image, link, github }) => (
    <article class="mt-10">
      <h3 class="text-2xl font-semibold text-indigo-300 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex flex-row gap-x-2 mt-3 mb-3">
        {tags.map((tag) => (
          <li>
            <span
              class={`
                flex items-center gap-x-2 
                bg-black/20
                rounded-full text-sm 
                border border-solid
                ${tag.class}
                py-1 px-2 
                hover:scale-95 hover:bg-white/10 transition`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img class={`${image.class}`} src={image.src} alt={image.alt} />
      <ul class="flex flex-row gap-x-2 mt-5">
        <li>
          <ButtonGradient name="Ver proyecto..." link={link} />
        </li>
        <li>
          <ButtonGradient name="Ver cÃ³digo..." link={github} />
        </li>
      </ul>
    </article>
  ))
}
