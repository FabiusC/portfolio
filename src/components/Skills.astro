---
import { TAGS } from "./consts/Constants.astro";
---
<ul>
    {Object.values(TAGS).map((tag) => (
      <li>
        <span
          class={`
            flex items-center gap-x-2 
            bg-black/20
            rounded-full text-sm 
            border border-solid
            ${tag.class}
            py-1 px-2 
            hover:scale-95 hover:bg-white/10 transition`}
        >
          <tag.icon class="size-4" />
          {tag.name}
        </span>
      </li>
    ))}
  </ul>
